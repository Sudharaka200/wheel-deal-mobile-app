<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="#FFF"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image View for Car -->
        <ImageView
            android:id="@+id/imgCar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />

        <!-- Car Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/addTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2020 BMW 3 Series"
                android:textColor="#000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/addArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Borella, Colombo 8"
                android:textColor="#666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addMiniDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Used | 145,000 KM | Fuel Type: Hybrid"
                android:textColor="#666"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/addPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs 44,000,000"
                android:textColor="#0288D1"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Edit and Delete Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Edit Button (Blue Background) -->
            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/blue"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit" />

            <!-- Delete Button (Red Background) -->
            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/red"
                android:tint="#FFFFFF"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete"
                android:layout_marginTop="8dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
