<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFF"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/addImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.063"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.024"
            app:srcCompat="@drawable/caricon" />

        <TextView
            android:id="@+id/addTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="2020 BMW 3 Series"
            android:layout_marginRight="10dp"
            android:textColor="@color/black"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="@+id/addImg"
            app:layout_constraintStart_toEndOf="@+id/addImg"
            app:layout_constraintTop_toTopOf="@+id/addImg"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/addArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Borella, Colombo 8"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/addTitle"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/addTitle"
            app:layout_constraintTop_toBottomOf="@+id/addTitle" />

        <TextView
            android:id="@+id/addMiniDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Used | 145,000 KM | Fuel Type : Hybrid"
            android:textSize="10dp"
            app:layout_constraintEnd_toEndOf="@+id/addArea"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/addArea"
            app:layout_constraintTop_toBottomOf="@+id/addArea" />

        <TextView
            android:id="@+id/textView66"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rs"
            android:textColor="#4DA1A9"
            app:layout_constraintEnd_toEndOf="@+id/addMiniDetails"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/addMiniDetails"
            app:layout_constraintTop_toBottomOf="@+id/addMiniDetails" />

        <TextView
            android:id="@+id/addPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="44,000,000"
            android:textColor="#4DA1A9"
            app:layout_constraintEnd_toEndOf="@+id/addMiniDetails"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toEndOf="@+id/textView66"
            app:layout_constraintTop_toBottomOf="@+id/addMiniDetails" />

</androidx.constraintlayout.widget.ConstraintLayout>